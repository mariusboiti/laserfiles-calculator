# Root environment (used by Prisma / shared config)
DATABASE_URL="postgresql://laser:laser@localhost:5432/laser?schema=public"

# JWT Authentication
JWT_ACCESS_SECRET="your-access-secret-here"
JWT_REFRESH_SECRET="your-refresh-secret-here"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Entitlements Configuration
# Set to "1" to use dev-mode entitlements without calling WordPress
ENTITLEMENTS_DEV_MODE="1"
# Plan to use in dev mode: GUEST, FREE, STARTER, PRO (default), LIFETIME
ENTITLEMENTS_DEV_PLAN="PRO"
# Cache TTL in milliseconds (default: 10 minutes)
ENTITLEMENTS_CACHE_TTL_MS="600000"

# WordPress Plugin Integration (optional - leave empty for dev mode)
# Base URL of the WordPress REST API for the LaserfilesPro plugin
WP_PLUGIN_BASE_URL=""
# Server-to-server API key for authenticated requests to WP plugin
WP_PLUGIN_API_KEY=""
# Client ID for this app instance (used in SSO flows)
WP_PLUGIN_CLIENT_ID=""
# Secret for verifying webhook signatures from WordPress
WP_PLUGIN_WEBHOOK_SECRET=""

# WordPress Integration (HMAC SSO + Billing Webhook)
WP_SSO_SECRET=""
WP_WEBHOOK_SECRET=""
WP_SSO_MAX_SKEW_SECONDS="120"

# WordPress product ID mapping (WooCommerce product IDs)
WP_PRODUCT_PRO_MONTHLY_ID=""
WP_PRODUCT_PRO_ANNUAL_ID=""
WP_PRODUCT_TOPUP_100_ID=""
WP_PRODUCT_TOPUP_200_ID=""
WP_PRODUCT_TOPUP_500_ID=""

# Feedback email delivery (apps/api)
EMAIL_PROVIDER="resend"
RESEND_API_KEY=""
FEEDBACK_TO_EMAIL="contact@laserfilespro.com"
FEEDBACK_FROM_EMAIL="LaserFilesPro Studio <no-reply@laserfilespro.com>"
